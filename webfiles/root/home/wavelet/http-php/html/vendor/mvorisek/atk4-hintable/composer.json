{
    "name": "mvorisek/atk4-hintable",
    "description": "Hintable extension for atk4 libraries",
    "license": "proprietary",
    "type": "library",
    "authors": [
        {
            "name": "Michael Voříšek",
            "email": "mvorisek@mvorisek.cz"
        }
    ],
    "homepage": "https://www.mvorisek.com/",
    "require": {
        "php": ">=7.4 <8.4",
        "atk4/data": "~5.0.0 || dev-develop"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "johnkary/phpunit-speedtrap": "^3.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.3",
        "phpunit/phpunit": "^9.3"
    },
    "conflict": {
        "phpstan/phpstan": "<1.10.12"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Mvorisek\\Atk4\\Hintable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mvorisek\\Atk4\\Hintable\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "phpstan": {
            "includes": [
                "phpstan-ext.neon"
            ]
        }
    }
}
